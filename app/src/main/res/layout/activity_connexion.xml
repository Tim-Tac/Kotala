<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content" >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="be.timtac.ephec.Connexion" >

	<TextView
        android:id="@+id/TitreConnexion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Connexion"
        android:textSize="20sp"
        android:gravity="center"
        android:textStyle="bold" />
	
	 
	 <LinearLayout 
	    android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal"
    	android:layout_marginTop="20dp"
    	android:layout_marginLeft="20sp" >
    	
	    <TextView 
	        android:id="@+id/textelogin"
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:textSize="16sp"
        	android:text="Identifiant : "
	        />
	         
	  	<EditText
        	android:id="@+id/login"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:inputType="text"
        	android:hint="login ou adresse email"
        	/>  
	 </LinearLayout>
	 
	 <LinearLayout 
	    android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal"
       	android:layout_marginLeft="30sp" >
    	
	    <TextView 
	        android:id="@+id/textepwd"
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:textSize="16sp"
        	android:text="Mot de passe : "
	        />
	 
	  	<EditText
       		android:id="@+id/pwd"
        	android:layout_width="140sp"
        	android:layout_height="wrap_content"
        	android:hint="password"
        	android:inputType="textPassword"
        	/>
	   </LinearLayout>
	  
	  <TextView
        android:id="@+id/mdpperdu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Mot de passe perdu ?"
        android:textColor="#2222FF"
        android:textStyle="italic"
        android:textSize="12sp"
        android:gravity="center" />
	  
	  <Button
		android:id="@+id/connexion"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Connexion"
		android:paddingLeft="20dp"
		android:paddingRight="20dp"
		android:layout_marginTop="40dp"
		android:layout_gravity="center"
		android:gravity="center"
		android:background="#CCCCCC"
	    android:textColor="#333333" />
	  
	  <TextView
        android:id="@+id/inscription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Pas encore inscrit ?"
        android:textColor="#2222FF"
        android:textStyle="italic"
        android:textSize="12sp"
        android:gravity="center" />

</LinearLayout>

</ScrollView>
