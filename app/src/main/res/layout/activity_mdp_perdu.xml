<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content" >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="be.timtac.ephec.Connexion" >

	<TextView
        android:id="@+id/titreMdpPerdu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Demande de nouveau mot de passe"
        android:textSize="20sp"
        android:gravity="center"
        android:textStyle="bold" />
	
	<TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Veuillez entrer votre adresse email ou login, afin de vous envoyer un mail contenant votre nouveau mot passe"
        android:textSize="16sp" />
	
	<EditText 
	    android:layout_marginTop="10sp"
	    android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/identifiants"
        android:inputType="text"
        android:hint="votre email ou identifiant"
	    />
	
	<Button 
	    android:id="@+id/validerinfos"
	    android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Valider"
        android:gravity="center"
        android:layout_marginTop="20sp"
        android:paddingLeft="30sp"
        android:paddingRight="30sp"
        android:layout_gravity="center"
	    />
	
</LinearLayout>
</ScrollView>
